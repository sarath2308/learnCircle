{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
     "typeRoots": ["./src/types", "./node_modules/@types"],  //customized type root - mind it when you are writing it 
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",              // ✅ set baseUrl to src
    "paths": {
      "@/*": ["*"]                   // ✅ map @/ to src/
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
