{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "isolatedModules": true,
    "experimentalDecorators": true,     // ✅ enable decorators
    "emitDecoratorMetadata": true       // ✅ emit type metadata for Inversify
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
